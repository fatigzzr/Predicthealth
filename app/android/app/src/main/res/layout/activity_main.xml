<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:background="@color/bg_dark">

    <!-- Top title -->
    <TextView
        android:id="@+id/mainTitle"
        android:text="Crear cuenta"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/accent"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- ViewFlipper to hold all sections -->
    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Sección: Cuenta -->
        <com.google.android.material.card.MaterialCardView
            style="@style/CardSection"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Cuenta"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/accent"
                        android:layout_marginBottom="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/emailEditText"
                        android:hint="Correo electrónico"
                        android:inputType="textEmailAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/InputStyle" />

                    <EditText
                        android:id="@+id/passwordEditText"
                        android:hint="Contraseña"
                        android:inputType="textPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/InputStyle" />

                </LinearLayout>
            </ScrollView>
        </com.google.android.material.card.MaterialCardView>

        <!-- Sección: Datos Personales -->
        <com.google.android.material.card.MaterialCardView
            style="@style/CardSection"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Datos Personales"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/accent"
                        android:layout_marginBottom="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/nombreEditText"
                        android:hint="Nombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/InputStyle" />

                    <EditText
                        android:id="@+id/apellidoEditText"
                        android:hint="Apellido"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/InputStyle" />

                    <EditText
                        android:id="@+id/fechaEditText"
                        android:hint="Fecha de nacimiento (YYYY-MM-DD)"
                        android:inputType="date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/InputStyle" />

                    <EditText
                        android:id="@+id/sexoEditText"
                        android:hint="Sexo (M/F)"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/InputStyle" />

                    <EditText
                        android:id="@+id/edadEditText"
                        android:hint="Edad"
                        android:inputType="number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/InputStyle" />

                </LinearLayout>
            </ScrollView>
        </com.google.android.material.card.MaterialCardView>

        <!-- Sección: Historial Médico -->
        <com.google.android.material.card.MaterialCardView
            style="@style/CardSection"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Historial Médico"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/accent"
                        android:layout_marginBottom="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="¿Padeces alguna de estas enfermedades?"
                        android:textSize="16sp"
                        android:textColor="@color/input_text"
                        android:layout_marginBottom="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <CheckBox
                        android:id="@+id/diabetesCheckBox"
                        android:text="Diabetes"
                        android:textColor="@color/input_text"
                        android:buttonTint="@color/accent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp" />

                    <CheckBox
                        android:id="@+id/hipertensionCheckBox"
                        android:text="Hipertensión"
                        android:textColor="@color/input_text"
                        android:buttonTint="@color/accent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp" />

                    <CheckBox
                        android:id="@+id/colesterolCheckBox"
                        android:text="Colesterol"
                        android:textColor="@color/input_text"
                        android:buttonTint="@color/accent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp" />

                    <CheckBox
                        android:id="@+id/colesterolAltoCheckBox"
                        android:text="Colesterol Alto"
                        android:textColor="@color/input_text"
                        android:buttonTint="@color/input_bg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:enabled="false" />

                </LinearLayout>
            </ScrollView>
        </com.google.android.material.card.MaterialCardView>

        <!-- Sección: Historial Médico Detallado (BMI y siguientes) -->
        <com.google.android.material.card.MaterialCardView
            style="@style/CardSection"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Historial Médico"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/accent"
                        android:layout_marginBottom="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/bmiEditText"
                        android:hint="Índice de masa corporal (IMC)"
                        android:inputType="numberDecimal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/InputStyle" />

                    <EditText
                        android:id="@+id/presionEditText"
                        android:hint="Presión arterial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/InputStyle" />

                    <EditText
                        android:id="@+id/saludGeneralEditText"
                        android:hint="Estado general de salud"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/InputStyle" />

                </LinearLayout>
            </ScrollView>
        </com.google.android.material.card.MaterialCardView>

        <!-- Sección: Medicamentos -->
        <com.google.android.material.card.MaterialCardView
            style="@style/CardSection"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Medicamentos (selecciona todas las que apliquen)"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/accent"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                <CheckBox
                    android:id="@+id/medicacionNingunaCheckBox"
                    android:text="Ninguna"
                    android:textColor="@color/input_text"
                    android:buttonTint="@color/accent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp" />

                <CheckBox
                    android:id="@+id/medicacionBetaCheckBox"
                    android:text="Beta blocker"
                    android:textColor="@color/input_text"
                    android:buttonTint="@color/accent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp" />

                <CheckBox
                    android:id="@+id/medicacionDiureticoCheckBox"
                    android:text="Diurético"
                    android:textColor="@color/input_text"
                    android:buttonTint="@color/accent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp" />

                <CheckBox
                    android:id="@+id/medicacionAceCheckBox"
                    android:text="ACE inhibitor"
                    android:textColor="@color/input_text"
                    android:buttonTint="@color/accent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp" />

                    <CheckBox
                        android:id="@+id/medicacionOtroCheckBox"
                        android:text="Otro"
                        android:textColor="@color/input_text"
                        android:buttonTint="@color/accent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp" />
                </LinearLayout>
            </ScrollView>
        </com.google.android.material.card.MaterialCardView>

        <!-- Sección: Historial Médico Padecimientos -->
        <com.google.android.material.card.MaterialCardView
            style="@style/CardSection"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="¿Ha padecido alguna de estas condiciónes?"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/accent"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <CheckBox
                        android:id="@+id/acvCheckBox"
                        android:text="Accidente cerebrovascular (ACV)"
                        android:textColor="@color/input_text"
                        android:buttonTint="@color/accent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp" />

                    <CheckBox
                        android:id="@+id/problemasCorazonCheckBox"
                        android:text="Problemas del corazón"
                        android:textColor="@color/input_text"
                        android:buttonTint="@color/accent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp" />
                </LinearLayout>
            </ScrollView>
        </com.google.android.material.card.MaterialCardView>

        <!-- Sección: Estilo de Vida -->
        <com.google.android.material.card.MaterialCardView
            style="@style/CardSection"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Estilo de Vida"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/accent"
                        android:layout_marginBottom="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                <CheckBox
                    android:id="@+id/frutasCheckBox"
                    android:text="Consumo diario de frutas"
                    android:textColor="@color/input_text"
                    android:buttonTint="@color/accent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp" />

                <CheckBox
                    android:id="@+id/verdurasCheckBox"
                    android:text="Consumo diario de verduras"
                    android:textColor="@color/input_text"
                    android:buttonTint="@color/accent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/salEditText"
                    android:hint="Cantidad de sal diaria (g)"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/InputStyle" />

                <CheckBox
                    android:id="@+id/fumaCheckBox"
                    android:text="Fuma actualmente"
                    android:textColor="@color/input_text"
                    android:buttonTint="@color/accent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp" />

                <CheckBox
                    android:id="@+id/alcoholCheckBox"
                    android:text="Consumo excesivo de alcohol"
                    android:textColor="@color/input_text"
                    android:buttonTint="@color/accent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp" />

                <CheckBox
                    android:id="@+id/dificultadMovCheckBox"
                    android:text="Dificultad para caminar/desplazarse"
                    android:textColor="@color/input_text"
                    android:buttonTint="@color/accent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/horasSuenoEditText"
                    android:hint="Horas promedio de sueño"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/InputStyle" />

                <EditText
                    android:id="@+id/nivelEstresEditText"
                    android:hint="Nivel de estrés (0-10)"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/InputStyle" />

                <EditText
                    android:id="@+id/diasSaludMentalEditText"
                    android:hint="Días con mala salud mental últimos 30 días"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/InputStyle" />

                <EditText
                    android:id="@+id/actividadFisicaEditText"
                    android:hint="Nivel de actividad física"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/InputStyle" />

                <CheckBox
                    android:id="@+id/actividad3VecesCheckBox"
                    android:text="Actividad física ≥3 veces por semana"
                    android:textColor="@color/input_text"
                    android:buttonTint="@color/accent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/diasSaludFisicaEditText"
                        android:hint="Días con mala salud física últimos 30 días"
                        android:inputType="number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/InputStyle" />

                </LinearLayout>
            </ScrollView>
        </com.google.android.material.card.MaterialCardView>

        <!-- Sección: Documentos -->
        <com.google.android.material.card.MaterialCardView
            style="@style/CardSection"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                    android:text="Documentos Clínicos y Diagnóstico"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/accent"
                    android:layout_marginBottom="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/tipoDocumentoEditText"
                    android:hint="Tipo de documento (Ej. HbA1c, Perfil Lipídico)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/InputStyle" />

                <EditText
                    android:id="@+id/valorDocumentoEditText"
                    android:hint="Valor numérico (si aplica)"
                    android:inputType="numberDecimal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/InputStyle" />

                <TextView
                    android:text="Documentos de Tratamiento y Seguimiento"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/accent"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/resumenVisitasEditText"
                    android:hint="Resumen de visitas (Endocrinólogo, Cardiólogo, etc.)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/InputStyle" />

                <EditText
                    android:id="@+id/diagnosticosConfirmadosEditText"
                    android:hint="Diagnósticos confirmados"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/InputStyle" />

                <EditText
                    android:id="@+id/tratamientosEditText"
                    android:hint="Tratamientos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/InputStyle" />

                    <EditText
                        android:id="@+id/hallazgosEditText"
                        android:hint="Hallazgos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/InputStyle" />

                </LinearLayout>
            </ScrollView>
        </com.google.android.material.card.MaterialCardView>

    </ViewFlipper>

    <!-- Navigation buttons -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="12dp">

        <Button
            android:id="@+id/prevButton"
            android:text="Anterior"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/accent_dark"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/nextButton"
            android:text="Siguiente"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/accent"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Result display -->
    <TextView
        android:id="@+id/resultTextView"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:textColor="@color/input_text"
        android:padding="12dp"
        android:background="@color/panel_dark"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp" />

</LinearLayout>
